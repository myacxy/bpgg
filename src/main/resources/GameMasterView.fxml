<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import com.jfoenix.validation.IntegerValidator?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1"
            prefWidth="600.0"
            xmlns="http://javafx.com/javafx/8.0.171"
            styleClass="game-master">
    <bottom>
        <HBox prefWidth="300.0"
              BorderPane.alignment="CENTER"
              HBox.hgrow="ALWAYS"
              spacing="16">
            <padding>
                <Insets bottom="16.0"
                        left="16.0"
                        right="16.0"
                        top="16.0" />
            </padding>
            <children>
                <JFXButton fx:id="start"
                           styleClass="button-outlined"
                           text="%action_start" />
                <JFXButton fx:id="pause"
                           styleClass="button-outlined"
                           text="%action_pause" />
                <JFXButton fx:id="reveal"
                           styleClass="button-outlined"
                           text="%action_reveal" />
            </children>
        </HBox>
    </bottom>
    <center>
        <HBox BorderPane.alignment="CENTER">
            <children>
                <VBox prefWidth="300.0"
                      spacing="8.0"
                      HBox.hgrow="ALWAYS">
                    <children>
                        <Label styleClass="title"
                               text="%title_player1" />
                        <VBox spacing="4.0">
                            <children>
                                <Label styleClass="subhead"
                                       text="%title_name" />
                                <JFXTextField fx:id="name1"
                                              styleClass="body1"
                                              text="Player1">
                                    <VBox.margin>
                                        <Insets right="56.0" />
                                    </VBox.margin>
                                </JFXTextField>
                            </children>
                        </VBox>
                        <VBox spacing="4.0">
                            <children>
                                <Label styleClass="subhead"
                                       text="%title_score" />
                                <StackPane>
                                    <children>

                                        <HBox alignment="CENTER_RIGHT"
                                              spacing="4.0">
                                            <children>
                                                <JFXButton fx:id="score1_up"
                                                           styleClass="button-icon" />
                                                <JFXButton fx:id="score1_down"
                                                           styleClass="button-icon" />
                                            </children>
                                            <StackPane.margin>
                                                <Insets />
                                            </StackPane.margin>
                                        </HBox>
                                        <JFXTextField fx:id="score1"
                                                      styleClass="body1"
                                                      text="0">
                                            <validators>
                                                <IntegerValidator />
                                            </validators>
                                            <StackPane.margin>
                                                <Insets right="56.0" />
                                            </StackPane.margin>
                                        </JFXTextField>
                                    </children>
                                </StackPane>
                            </children>
                            <VBox.margin>
                                <Insets />
                            </VBox.margin>
                        </VBox>
                        <JFXButton fx:id="buzzer1"
                                   styleClass="button-outlined"
                                   text="%title_buzzer" />
                    </children>
                    <HBox.margin>
                        <Insets />
                    </HBox.margin>
                    <padding>
                        <Insets left="16.0"
                                right="16.0"
                                top="16.0" />
                    </padding>
                </VBox>
                <VBox prefWidth="300.0"
                      spacing="8.0"
                      HBox.hgrow="ALWAYS">
                    <children>
                        <Label styleClass="title"
                               text="%title_player2" />
                        <VBox spacing="4.0">
                            <children>
                                <Label styleClass="subhead"
                                       text="%title_name" />
                                <JFXTextField fx:id="name2"
                                              styleClass="body1"
                                              text="Player2">
                                    <VBox.margin>
                                        <Insets right="56.0" />
                                    </VBox.margin>
                                </JFXTextField>
                            </children>
                        </VBox>
                        <VBox spacing="4.0">
                            <children>
                                <Label styleClass="subhead"
                                       text="%title_score" />
                                <StackPane>
                                    <children>

                                        <HBox alignment="CENTER_RIGHT"
                                              spacing="4.0">
                                            <children>
                                                <JFXButton fx:id="score2_up"
                                                           styleClass="button-icon" />
                                                <JFXButton fx:id="score2_down"
                                                           styleClass="button-icon" />
                                            </children>
                                            <StackPane.margin>
                                                <Insets />
                                            </StackPane.margin>
                                        </HBox>
                                        <JFXTextField fx:id="score2"
                                                      styleClass="body1"
                                                      text="0">
                                            <validators>
                                                <IntegerValidator />
                                            </validators>
                                            <StackPane.margin>
                                                <Insets right="56.0" />
                                            </StackPane.margin>
                                        </JFXTextField>
                                    </children>
                                </StackPane>
                            </children>
                        </VBox>
                        <JFXButton fx:id="buzzer2"
                                   styleClass="button-outlined"
                                   text="%title_buzzer" />
                    </children>
                    <padding>
                        <Insets left="16.0"
                                right="16.0"
                                top="16.0" />
                    </padding>
                </VBox>
            </children>
            <BorderPane.margin>
                <Insets />
            </BorderPane.margin>
        </HBox>
    </center>
</BorderPane>
